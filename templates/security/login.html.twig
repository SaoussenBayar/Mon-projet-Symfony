{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('Connexion') }}    
{% endblock %}

{% block body %}
<div class="container">
    <!-- Section gauche avec illustration -->
    <div class="left p-4 d-flex align-items-center justify-content-center">
        <img src="{{ asset('images/connexion32.png') }}" alt="Illustration"> <!-- Remplacez 'connexion32.png' par le chemin correct -->
    </div>

    <!-- Section droite avec le formulaire -->
    <div class="right p-5">
        <h1>Heureux de te revoir ! ðŸ˜Š</h1>

        <!-- Formulaire de connexion -->
        <form method="post" action="{{ path('app_login') }}">
            <!-- Champ pour l'email -->
            <div class="form-group">
                <label for="email">Email</label>
                <input
                    type="email"
                    name="_username"
                    id="email"
                    placeholder="Votre email"
                    class="form-control"
                    required
                />
            </div>

            <!-- Champ pour le mot de passe -->
            <div class="form-group">
                <label for="motdepasse">Mot de passe</label>
                <input
                    type="password"
                    name="_password"
                    id="motdepasse"
                    placeholder="Votre mot de passe"
                    class="form-control"
                    required
                />
            </div>

            <!-- Bouton de soumission -->
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn register-btn w-50 mt-4 mx-auto">
                    Se connecter
                </button>
            </div>
        </form>


        <!-- Lien pour le mot de passe oubliÃ© -->
        <div class="login-link text-center mt-5">
            Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous ici</a>   <br>
            Mot de passe oubliÃ©? <a href="/reset-password">cliquez ici</a>

        </div>
    </div>
</div>   
    {% if error %}
        <script type="text/javascript">
            alert("Oops! ðŸ˜” L'email ou le mot de passe est incorrect. !");
        </script>
    {% endif %}
 
{% endblock %}
