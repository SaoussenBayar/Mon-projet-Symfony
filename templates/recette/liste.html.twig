{% extends 'base.html.twig' %}

{% block title %}Recettes pour B√©b√©s{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('recette') }}
{% endblock %}

{% block body %}
    <h1 class="text-h1">Savoure les meilleures recettes pour ton b√©b√© ! üòã</h1>

    <!-- Barre de recherche et filtre -->
    <form method="get" action="{{ path('recette_liste') }}" class="search-filter-form">
        <div class="search-bar">
            <input type="text" name="search" placeholder="Rechercher une recette" value="{{ search }}" />
            <button type="submit">Rechercher</button>
        </div>
        <div class="filter">
            <label for="age">L'√¢ge :</label>
            <select id="age" name="age" onchange="this.form.submit()">
                <option value="">Tous les √¢ges</option>
                <option value="4 √† 6 mois" {% if age == '4 √† 6 mois' %}selected{% endif %}>4 √† 6 mois</option>
                <option value="6 √† 8 mois" {% if age == '6 √† 8 mois' %}selected{% endif %}>6 √† 8 mois</option>
                <option value="9 √† 12 mois" {% if age == '9 √† 12 mois' %}selected{% endif %}>9 √† 12 mois</option>
                <option value="12 mois et +" {% if age == '12 mois et +' %}selected{% endif %}>12 mois et plus</option>
            </select>
        </div>
    </form>

    <!-- Liste des recettes -->
    <ul class="recipes-list">
        {% for recette in recettes %}
            <li class="recipe-item">
                <a href="{{ path('recette_details', { id: recette.id }) }}">
                    <div class="recipe-image">
                        <img src="{{ asset('images/' ~ recette.image) }}" alt="Image de {{ recette.titre }}" />
                    </div>
                    <div class="recipe-details">
                        <h2>{{ recette.titre }}</h2>
                        <p><strong>√Çge recommand√© :</strong> {{ recette.ageRecommende }}</p>
                        <p><strong>Temps de pr√©paration :</strong> {{ recette.tempsPrep }} minutes</p>
                    </div>
                </a>
            </li>
        {% else %}
            <li>Aucune recette trouv√©e.</li>
        {% endfor %}
    </ul>

    <!-- Pagination -->
{% if recettes is not empty %}
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {% if recettes.currentPageNumber > 1 %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('recette_liste', { page: recettes.currentPageNumber - 1, search: search, age: age }) }}">Pr√©c√©dent</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link">Pr√©c√©dent</span>
                </li>
            {% endif %}

            {% for page in 1..recettes.pageCount %}
                <li class="page-item {% if page == recettes.currentPageNumber %}active{% endif %}">
                    <a class="page-link" href="{{ path('recette_liste', { page: page, search: search, age: age }) }}">{{ page }}</a>
                </li>
            {% endfor %}

            {% if recettes.currentPageNumber < recettes.pageCount %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('recette_liste', { page: recettes.currentPageNumber + 1, search: search, age: age }) }}">Suivant</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link">Suivant</span>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
{% endblock %}
