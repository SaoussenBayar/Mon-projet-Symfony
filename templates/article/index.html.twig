{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des articles</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
           <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.titre }}</td>
                    <td>{{ article.contenu }}</td>
                    <td>
                        {% if article.image %}
                            <!-- Affichage de l'image dans une cellule de tableau -->
                            <img src="{{ asset('images/' ~ article.image) }}" alt="IMG" style="width: 50px; height: auto;">
                        {% else %}
                            <span>No image</span>
                        {% endif %}
                    </td>
                    <td>
                    <a href="{{ path('article_edit', {id: article.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                        <form action="{{ path('article_delete', {id: article.id}) }}" method="post" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                        </form>                    </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
